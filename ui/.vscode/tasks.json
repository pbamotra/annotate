{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        },
        {
            "label": "Sass",
            "type": "shell",
            "command": "npx sass --watch style.scss:out/css/style.css",
            "group": "build",
            "problemMatcher": []
        },
        {

            "label": "HTML",
            "type": "shell",
            "command": "cp index.html out/index.html",
            "group": "build",
            "problemMatcher": []
        }
    ]
}