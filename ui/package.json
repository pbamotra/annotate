{
  "name": "annotate_ui",
  "version": "1.0.0",
  "description": "UI for the Annotate",
  "main": "main.js",
  "author": "Varuna Jayasiri",
  "devDependencies": {
    "sass": "latest",
    "http-server": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "build": "$npm_execpath run build:ts && $npm_execpath run build:sass && $npm_execpath run build:html",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build:sass": "sass style.scss:out/css/style.css",
    "watch:sass": "sass --watch style.scss:out/css/style.css",
    "build:html": "cp index.html out/index.html",
    "build:clean": "rm -rf out/"
  }
}
